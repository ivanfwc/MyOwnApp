<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titlemobileplan"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:layout_marginEnd="77dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/analyseplan"
                    android:textSize="16sp"
                    android:layout_marginTop="37dp"
                    android:layout_marginEnd="35dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/imusing"
                    android:textSize="16sp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="35dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                <Button
                        android:layout_width="144dp"
                        android:layout_height="40dp"
                        android:text="@string/prepaid"
                        android:id="@+id/bPrepaid"
                        android:layout_gravity="start"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:onClick="onClick"
                        android:background="@drawable/mybutton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_marginEnd="10dp"/>

                <Button
                        android:layout_width="144dp"
                        android:layout_height="40dp"
                        android:text="@string/postpaid"
                        android:id="@+id/bPostpaid"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:onClick="onClick"
                        android:background="@drawable/mybutton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_marginEnd="30dp"/>

            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/impaying"
                    android:textSize="16sp"
                    android:layout_marginTop="36sp"
                    android:layout_marginEnd="37dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginTop="20dp">

                <Button
                        android:id="@+id/bCurrency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MYR"
                        android:layout_weight="2"
                        android:background="@null"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginEnd="20dp"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@color/white"
                        android:layout_weight="1"
                        android:layout_marginEnd="33dp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        android:scrollbars="none">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <Button
                                android:layout_width="144dp"
                                android:layout_height="40dp"
                                android:text="@string/monthly"
                                android:id="@+id/bMonthly"
                                android:layout_gravity="start"
                                android:textAllCaps="false"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:onClick="onClick"
                                android:background="@drawable/mybutton"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_marginEnd="8dp"/>

                        <Button
                                android:layout_width="144dp"
                                android:layout_height="40dp"
                                android:text="@string/weekly"
                                android:id="@+id/bWeekly"
                                android:layout_gravity="center"
                                android:textAllCaps="false"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:onClick="onClick"
                                android:background="@drawable/mybutton"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_marginEnd="8dp"/>

                        <Button
                                android:layout_width="144dp"
                                android:layout_height="40dp"
                                android:text="@string/daily"
                                android:id="@+id/bDaily"
                                android:layout_gravity="center"
                                android:textAllCaps="false"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:onClick="onClick"
                                android:background="@drawable/mybutton"
                                style="?android:attr/borderlessButtonStyle"/>

                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/impaying"
                    android:textSize="16sp"
                    android:layout_marginTop="36sp"
                    android:layout_marginEnd="37dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:weightSum="1">

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@color/white"
                        android:layout_weight="1"
                        android:layout_marginEnd="27dp"/>

                <Button
                        android:id="@+id/bGB"
                        android:layout_width="30dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:text="GB"
                        android:background="@null"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginEnd="10dp"/>

                <Button
                        android:id="@+id/bMB"
                        android:layout_width="30dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:text="MB"
                        android:background="@null"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:weightSum="4">

                <Button
                        android:layout_width="88dp"
                        android:layout_height="32dp"
                        android:text="10"
                        android:id="@+id/bTen"
                        android:layout_gravity="start"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:onClick="onClick"
                        android:background="@drawable/mybutton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"/>

                <Button
                        android:layout_width="88dp"
                        android:layout_height="32dp"
                        android:text="20"
                        android:id="@+id/bTwenty"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:onClick="onClick"
                        android:background="@drawable/mybutton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"/>

                <Button
                        android:layout_width="104dp"
                        android:layout_height="32dp"
                        android:text="@string/unlimited"
                        android:id="@+id/bUnlimited"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:onClick="onClick"
                        android:background="@drawable/mybutton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_weight="2"/>

            </LinearLayout>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/next"
                    android:background="@drawable/mybutton"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_marginTop="24dp"
                    android:textColor="#2196f3"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>