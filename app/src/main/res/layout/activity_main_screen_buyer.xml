<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:background="@drawable/background_gradient"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/navprofile_imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                android:src="@mipmap/ic_launcher_round"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                android:gravity="top">

            <TextView
                    android:layout_width="76dp"
                    android:layout_height="19dp"
                    android:text="Welcome,"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

            <TextView
                    android:layout_width="117dp"
                    android:layout_height="25dp"
                    android:text="Michelle"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-100dp">

        <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:minHeight="200dp"
                app:cardCornerRadius="6dp">

            <TextView
                    android:id="@+id/connectornot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oops!You're not connected"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="26dp"
                    android:textSize="12sp"
                    android:textColor="#424242"/>

            <TextView
                    android:id="@+id/cellular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotlink"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="46dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            <ImageView
                    android:id="@+id/signalbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/group_2_copy_3"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="-30dp"
                    android:layout_marginStart="42dp"/>

            <TextView
                    android:id="@+id/weakstrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="-30dp"
                    android:layout_marginStart="104dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/slowfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_gravity="center|end"
                    android:layout_marginTop="-30dp"
                    android:layout_marginEnd="64dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            <ImageView
                    android:id="@+id/connectionbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/group_26_copy_6"
                    android:layout_gravity="center|end"
                    android:layout_marginTop="-30dp"
                    android:layout_marginEnd="93dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What's next?"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="#424242"
                    android:layout_marginTop="168dp"
                    android:layout_marginBottom="136dp"/>

            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/group_25"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="53dp"/>

            <TextView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="Find Internet"
                    android:layout_gravity="bottom"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="23dp"/>

            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/group_24"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="60dp"
                    android:layout_marginBottom="53dp"/>

            <TextView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="Sell Internet"
                    android:layout_gravity="bottom|end"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="23dp"/>

        </android.support.design.card.MaterialCardView>

    </LinearLayout>

    <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/navigation"/>

</LinearLayout>