<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.Shrine"
        android:fitsSystemWindows="true">

    <ImageView
            android:layout_width="240dp"
            android:layout_height="187.7dp"
            android:layout_gravity="center"
            android:layout_marginTop="51dp"
            android:background="@drawable/asset_56"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/youreallsetupup"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:layout_marginTop="48.3dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="73dp"
            android:layout_gravity="center"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="61dp"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/getName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Michelle!"
                android:textColor="@color/white"
                android:textSize="18sp"/>

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/awesome"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="63dp"
            android:layout_marginEnd="64dp"
            android:gravity="center"/>

    <android.support.design.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            android:text="@string/letsstart"
            style="@style/sim_button_1"
            android:textColor="#2196f3"
            android:textStyle="bold"
            app:rippleColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</LinearLayout>