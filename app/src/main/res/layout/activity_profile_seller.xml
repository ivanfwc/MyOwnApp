<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:minHeight="?attr/actionBarSize"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titlemobileplan"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:layout_marginEnd="77dp"
                android:layout_marginTop="20dp"/>

        <android.support.design.card.MaterialCardView
                android:layout_width="350dp"
                android:layout_height="104dp"
                android:layout_marginTop="38dp"
                android:layout_gravity="center"
                app:cardCornerRadius="6dp"
                android:elevation="0dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:text="@string/youpaying"
                        android:textColor="#424242"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:text="MYR 0.80 / MB"
                        android:textColor="#424242"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"/>

            </LinearLayout>
        </android.support.design.card.MaterialCardView>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/waive"
                android:textColor="@color/white"
                android:layout_marginTop="33dp"
                android:textSize="14sp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/mobileData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 GB"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/monthweekday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" / month"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attheprice"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="38dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/pricing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MYR 0.80"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/gbmb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" / MB"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>